---
import Card from "../../components/Card.astro";
import BaseLayout from "../../layouts/BaseLayout.astro";

const pageTitle = "Blog";

// Temporary hardcoded posts (we'll make this dynamic later)
export const posts = [
  {
    title: "Getting Started with Astro",
    description: "Learn the basics of the Astro framework.",
    slug: "getting-started",
    date: "2026-01-15",
    tags: ["astro", "getting-started"],
  },
  {
    title: "Understanding Islands Architecture",
    description: "Why partial hydration changes everything.",
    slug: "islands-architecture",
    date: "2026-01-16",
    tags: ["astro", "islands-architecture"],
  },
  {
    title: "Content Collections Deep Dive",
    description: "Type-safe content management in Astro.",
    slug: "content-collections",
    date: "2026-01-17",
    tags: ["astro", "content-collections"],
  },
];
---

<BaseLayout
  title={pageTitle}
  description="Thoughts on web development, learning, and building things.">
  <h1 class="font-serif text-5xl lg:text-6xl text-(--color-text) mb-6">
    {pageTitle}
  </h1>
  <p class="text-xl text-(--color-text-muted) mb-12">
    Thoughts on web development, learning, and building things.
  </p>

  <div class="space-y-8">
    {
      posts.map((post) => (
        <Card
          date={new Date(post.date).toLocaleDateString("en-US", {
            year: "numeric",
            month: "long",
            day: "numeric",
          })}
          tags={post.tags}
          title={post.title}
          description={post.description}
          url={`/blog/${post.slug}`}
        />
      ))
    }
  </div>
</BaseLayout>
