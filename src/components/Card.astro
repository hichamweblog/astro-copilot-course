---
// Define what props this component accepts
interface Props {
  title: string;
  description: string;
  url?: string;
  date?: string;
  tags?: string[];
}

// Destructure props from Astro. props
const { title, description, url = "#", date, tags = [] } = Astro.props;
---

<article
  class="border border-(--color-border) rounded-lg p-8 mb-6 shadow-sm bg-(--color-card-bg) transition-shadow hover:shadow-md">
  <p class="text-sm text-(--color-text-muted) mb-2 mt-0">{date}</p>
  <h2
    class="font-serif text-2xl lg:text-3xl text-(--color-text) mt-0 mb-3 font-bold dark:font-extrabold">
    <a
      href={url}
      class="text-(--color-accent) hover:text-(--color-accent-hover) no-underline dark:text-(--color-accent) dark:drop-shadow-[0_0_8px_rgba(129,140,248,0.5)]">
      {title}
    </a>
  </h2>
  <p class="text-(--color-text-muted) mb-4">{description}</p>
  <a
    href={url}
    class="text-(--color-accent) hover:text-(--color-accent-hover) no-underline font-medium">
    Read more â†’
  </a>
  <ul class="flex flex-wrap gap-2 list-none m-0 p-0 mt-4">
    {
      tags.map((tag) => (
        <li class="border border-(--color-border) rounded px-3 py-1 text-sm">
          <a
            href={`/blog/tags/${tag}`}
            class="text-(--color-text-muted) hover:text-(--color-text) no-underline">
            {tag}
          </a>
        </li>
      ))
    }
  </ul>
</article>
