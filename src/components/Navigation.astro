---
const navigationLinks = [
  { href: "/", text: "Home" },
  { href: "/about", text: "About" },
  { href: "/blog", text: "Blog" },
];
const blogName = "My Dev Journey";
---

<header>
  <h1><a href="/">{blogName}</a></h1>
  <nav>
    <ul>
      {
        navigationLinks.map((link) => (
          <li>
            <a href={link.href}>{link.text}</a>
          </li>
        ))
      }
    </ul>
  </nav>
</header>

<style>
  header {
    background-color: #09090b;
    padding: 1.5rem;
    border-bottom: 1px solid #27272a;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  header h1 {
    margin: 0;
    color: #fafafa;
    font-size: 1.5rem;
    font-weight: 600;
  }
  h1 a {
    text-decoration: none;
    color: inherit;
    transition: color 0.2s;
  }
  h1 a:hover {
    color: #a1a1aa;
  }
  nav ul {
    list-style: none;
    padding: 0;
    display: flex;
    gap: 1.5rem;
    margin: 0.5rem 0 0 0;
  }

  nav a {
    text-decoration: none;
    font-size: 0.95rem;
    color: #d4d4d8;
    transition: color 0.2s;
    font-weight: 500;
  }

  nav a:hover {
    color: #ffffff;
  }
</style>
