---
const navigationLinks = [
  { href: "/", text: "Home" },
  { href: "/about", text: "About" },
  { href: "/blog", text: "Blog" },
];
const blogName = "My Dev Journey";
---

<header class="bg-(--color-nav-bg) border-b border-slate-800">
  <div class="max-w-4xl mx-auto px-6 py-6 flex items-center justify-between">
    <h1 class="m-0 text-2xl font-semibold">
      <a
        href="/"
        class="text-(--color-nav-text) hover:text-white no-underline transition-colors">
        {blogName}
      </a>
    </h1>
    <nav class="flex items-center gap-6">
      <ul class="flex items-center gap-8 list-none m-0 p-0">
        {
          navigationLinks.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-(--color-nav-text) hover:text-white font-medium transition-colors">
                {link.text}
              </a>
            </li>
          ))
        }
      </ul>
      <button
        onclick="toggleTheme()"
        class="p-2 rounded-lg text-(--color-nav-text) hover:text-white transition-colors"
        aria-label="Toggle theme">
        <!-- Sun icon (shown in dark mode) -->
        <svg
          class="hidden dark:block w-5 h-5"
          fill="currentColor"
          viewBox="0 0 20 20">
          <path
            d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z"
          ></path>
        </svg>
        <!-- Moon icon (shown in light mode) -->
        <svg
          class="block dark:hidden w-5 h-5"
          fill="currentColor"
          viewBox="0 0 20 20">
          <path
            d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"
          ></path>
        </svg>
      </button>
    </nav>
  </div>
</header>
